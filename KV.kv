            id: label
            text: "Регистрация пользователя"
            font_size: 25
            bold: True

            pos_hint: {'center_x': 0.5, 'center_y': 0.85}

            color: get_color_from_hex(colors["Teal"]["A700"])

        SpecialTextField:
            id: name
            hint_text: "Имя"
            pos_hint: {'center_x': 0.5, 'center_y': 0.65}

        MDDropDownItem:

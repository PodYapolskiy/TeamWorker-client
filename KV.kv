# Главный экран
<MainScreen>:

    # Toolbar, чтобы можно было использовать self.ids.toolbar.title
    toolbar: toolbar
    menu_list: menu_list

    MDFloatLayout:
        md_bg_color: 0.93, 0.93, 0.93, 1

        BoxLayout:
            MDScrollViewRefreshLayout:
                id: refresh_layout
                refresh_callback: app.refresh_callback
                root_layout: root
                size_hint: 1, 1
  
                MDList:
                    id: container
                    padding: 10, 75, 10, 120
                    spacing: 10

        MDToolbar:
            id: toolbar
            
            # Текст
            title: "[color=#ffffff][b]<НазваниеКоманды>[/b][/color]"
            
            # Позиционирование
            pos_hint: {'top': 1.0}
            anchor_title: 'center'
            
            # Оформление
            specific_text_color: 1, 1, 1, 1

            left_action_items: [["arrow-left", lambda x: root.back_to_start()]]
            right_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]

        MDNavigationDrawer:
            id: nav_drawer

            StackLayout:
                orientation: 'lr-tb'

                MDList:
                    id: menu_list

                    OneLineListItem:
                        text: "Настройки (в разработке)"
                        on_release: print('кек')
                    OneLineListItem:
                        text: "Роли (в разработке)"
                    OneLineListItem:
                        text: "Выйти"
                        on_release:
                            root.back_to_start()

        MDIconButton:
            # Текст
            user_font_size: "50sp"
            text_color: 1,1,1,1

            # Позиционирование
            pos_hint: {'x': 0.8, 'y': 0.03}
            
            # Оформление
            icon: "plus"
            md_bg_color: get_color_from_hex(colors["Teal"]["A700"])
            theme_text_color: "Custom"

            on_release:
                root.clear_screen()
                root.change_box_id()
                root.manager.transition.direction = 'left'
                root.manager.transition.duration = 0.5
                root.manager.current = 'task_screen'



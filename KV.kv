            markup: True
            pos_hint: {'center_x': 0.5, 'center_y': 0.2}
            size_hint: 0.55, 0.07
            font_size: 16

            on_release:
                root.registrate()


# Главный экран
<MainScreen>:

    # Toolbar, чтобы можно было использовать self.ids.toolbar.title
    toolbar: toolbar
    menu_list: menu_list

    MDFloatLayout:
        md_bg_color: 0.93, 0.93, 0.93, 1

        BoxLayout:
            MDScrollViewRefreshLayout:
                id: refresh_layout
                refresh_callback: app.refresh_callback
                root_layout: root
                size_hint: 1, 1
  
                MDList:
                    padding : 10,75,10,120
                    spacing : 10
                    id: container

        MDToolbar:
            id: toolbar
            title: "[color=#ffffff][b]<НазваниеКоманды>[/b][/color]"
            anchor_title: 'center'
            pos_hint: {'top': 1.0}
            specific_text_color: 1, 1, 1, 1

            left_action_items: [["arrow-left", lambda x: root.back_to_start()]]
            right_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]
            # 'format-colour-highlight' 'grease-pencil' 'pencil'

        MDNavigationDrawer:
            id: nav_drawer

            StackLayout:
                orientation: 'lr-tb'

                MDList:
                    id: menu_list

                    OneLineListItem:
                        text:"Настройки (в разработке)"
                        on_release: print('кек')
                    OneLineListItem:
                        text:"Роли (в разработке)"
                    OneLineListItem:
                        text:"Выйти"
                        on_release:
                            root.back_to_start()

        MDIconButton:
            icon: "plus"
            pos_hint: {'x': 0.8, 'y': 0.03}
            user_font_size: "50sp"
            md_bg_color: get_color_from_hex(colors["Teal"]["A700"])
            theme_text_color: "Custom"
            text_color: 1,1,1,1

            on_release:
                root.clear_screen()
                root.change_box_id()
                root.manager.transition.direction = 'left'
                root.manager.transition.duration = 0.5
                root.manager.current = 'task_screen'


# Экран создания задач
<TaskScreen>:
    text:text
    time:time
    time_label:time_label
    button:button
    label:label
    warning_label:warning_label
    MDFloatLayout:
        md_bg_color: 0.93, 0.93, 0.93, 1

        MDIconButton:
            icon: "arrow-left"
            pos_hint: {'x': 0.05, 'y': 0.9}
            user_font_size: "30sp"

            on_release:
                root.manager.transition.direction = 'right'
                root.manager.transition.duration = 0.5
                root.manager.current = 'main_screen'

        SpecialLabel:
            id: label
            text: "Задача:"
            font_size: 25
            bold: True

            pos_hint: {'center_x': 0.5, 'center_y': 0.85}

            color: get_color_from_hex(colors["Teal"]["A700"])

        SpecialTextField:
            id: text
            hint_text: "Задача"
            size_hint_y: .15
            size_hint_x: .6
            multiline: True
            mode: "rectangle"
            pos_hint: {'center_x': 0.5, 'center_y': 0.7}

        MDRaisedButton:
            id: time
            text: "[color=#ffffff][b]Список пользователей\n(в разработке)[/b][/color]"

            pos_hint: {'center_x': .5, 'center_y': .5}
            # on_release:
            #     root.manager.transition.direction = 'right'
            #     root.manager.transition.duration = 0.5
            #     root.manager.current = 'task_members_screen'

        MDRaisedButton:
            id: time
            text: "[color=#ffffff][b]Изменить время[/b][/color]"

            pos_hint: {'center_x': .3, 'center_y': .4}
            on_release: root.show_time_picker()

        SpecialLabel:
            id: time_label
            text: "HH:MM"

            pos_hint: {'center_x': 0.7, 'center_y': 0.4}

        MDRaisedButton:
            id: date
            text: "[color=#ffffff][b]Изменить дату[/b][/color]"

            pos_hint: {'center_x': .3, 'center_y': .3}
            on_release: root.show_date_picker()

        SpecialLabel:
            id: date_label
            text: "YYYY.DD.MM"

            pos_hint: {'center_x': 0.7, 'center_y': 0.3}

        SpecialLabel:
            id: warning_label
            text: ""
            font_size: 14

            pos_hint: {'center_x': 0.5, 'center_y': 0.3}
            color: 1,0,0,1

        MDFillRoundFlatButton:
            id: button
            text: "[color=#ffffff][b]Сохранить задачу[/b][/color]"

            markup: True
            pos_hint: {'center_x': 0.5, 'center_y': 0.2}
            size_hint: 0.55, 0.07
            font_size: 20

            on_release:
                root.make_task()



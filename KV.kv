# Специальная метка
<SpecialLabel@MDLabel>:
    # size_hint_x: 0.5  #t
    font_size: 25
    halign: 'center'

<MDFillRoundFlatButton>:
    theme_text_color: root.theme_text_color   
    text_color: root.text_color   

# Специальное текстовое поле
<SpecialTextField@MDTextField>:
    multiline: False
    size_hint_x: 0.5
    mode: "rectangle"
    required: True
    helper_text_mode: "on_error"
    helper_text: "Обязательное поле"

<TaskCard>:
    size_hint_y: None
    height: content.height

    MDCardSwipeLayerBox:
        padding: "8dp"

        MDIconButton:
            icon: "trash-can"
            pos_hint: {"center_y": .5}
            on_release: root.remove_card(root)

    MDCardSwipeFrontBox:

        ThreeLineListItem:
            id: content
            text: root.text
            secondary_text: root.secondary_text
            tertiary_text: root.tertiary_text
            on_release: root.change_screen(root)

        RightCheckbox:
            on_active: root.on_checkbox_active(*args, root)
            pos_hint_x: 0.9
            active: root.active


<UserCard>:
    size_hint_y: None
    height: content.height

    MDCardSwipeLayerBox:
        padding: "8dp"

        MDIconButton:
            icon: "face"
            pos_hint: {"center_y": .5}

    MDCardSwipeFrontBox:

        OneLineListItem:
            id: content
            text: root.text

        RightCheckbox:
            on_active: root.on_checkbox_active(*args, root)
            pos_hint_x: 0.9
            active: root.active


<SwipeToDeleteItem>:
    size_hint_y: None
    height: content.height

    MDCardSwipeLayerBox:
        padding: "8dp"

        MDIconButton:
            icon: "trash-can"
            pos_hint: {"center_y": .5}
            on_release: root.remove_card(root)

    MDCardSwipeFrontBox:

        TwoLineListItem:
            id: content
            text: root.text
            secondary_text: root.secondary_text
            on_release: root.change_screen(root)


# Начальный экран
<StartScreen>:
    MDFloatLayout:
        md_bg_color: 0.93, 0.93, 0.93, 1

        MDFillRoundFlatButton:
            # Текст
            text: "[color=#ffffff][b]РЕГИСТРАЦИЯ\nКОМАНДЫ[/b][/color]"
            # (markup - метки в строке, похоже на html теги)
            font_size: 22
            markup: True

            # Позиционирование
            pos_hint: {'center_x': 0.5, 'center_y': 0.6}

            # Размеры
            size_hint: 0.5, 0.15

            on_release:
                root.define_screens()
                root.manager.transition.direction = 'down'
                root.manager.transition.duration = 0.5
                root.manager.current = 'sign_in_screen'

        MDFillRoundFlatButton: #MDRaisedButton:
            # Текст
            text: "[color=#ffffff][b]ВХОД[/b][/color]"
            font_size: 22
            markup: True

            # Позиционирование
            pos_hint: {'center_x': 0.5, 'center_y': 0.4}

            # Размеры
            size_hint: 0.5, 0.15

            on_release:
                root.define_screens()
                root.manager.transition.direction = 'up'
                root.manager.transition.duration = 0.5
                root.manager.current = 'log_in_screen'

        MDTextButton:
            text: "ВЫЙТИ"
            pos_hint: {'center_x': 0.5, 'center_y': 0.28}
            font_size: 17

            on_release:
                app.exit_app()


# Поле ввода для Dialog
<EditTeamName>:

    # Текстовое поле ввода названия команды
    team_name: team_name

    orientation: 'vertical'
    spacing: "12dp"
    size_hint_y: None
    height: "50dp"

    MDTextField:
        id: team_name
        hint_text: "Название"
        multiline: False
        font_size: '20sp'


# Экран регистрации
<SignInScreen>:

    # Toolbar, чтобы можно было использовать self.ids.toolbar.title
    toolbar: toolbar

    MDFloatLayout:
        md_bg_color: 0.93, 0.93, 0.93, 1

        BoxLayout:
            ScrollView:
                size_hint: 1, 1
  
                MDList:
                    padding : 10,75,10,120
                    spacing : 10
                    id: container

        MDToolbar:
            id: toolbar
            title: "[color=#ffffff]<Введите название команды>[/color]"
            markup: True
            anchor_title: 'center'
            pos_hint: {'top': 1.0}
            specific_text_color: 1, 1, 1, 1


            left_action_items: [["arrow-left", lambda x: root.back_to_start(), "Вернуться на стартовую"]]
            right_action_items: [["pencil", lambda x: root.edit_team_name(), "Изменить название команды"]]
            # 'format-colour-highlight' 'grease-pencil' 'pencil'

        MDIconButton:
            icon: "plus"
            pos_hint: {'x': 0.8, 'y': 0.03}
            user_font_size: "50sp"
            md_bg_color: get_color_from_hex(colors["Teal"]["A700"])
            theme_text_color: "Custom"
            text_color: 1,1,1,1

            on_release:
                root.clear_fields()
                root.create_user_box()
                root.manager.transition.direction = 'left'
                root.manager.transition.duration = 0.5
                root.manager.current = 'registration_screen'

        MDFillRoundFlatButton:
            text: "[color=#ffffff][b]ЗАРЕГИСТРИРОВАТЬ[/b][/color]"
            markup: True
            pos_hint: {'center_x': 0.35, 'center_y': 0.075}
            size_hint: 0.55, 0.1
            font_size: 22

            on_release:
                root.sign_in()



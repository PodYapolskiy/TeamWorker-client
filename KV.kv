#:kivy 2.0.0
#:import get_color_from_hex kivy.utils.get_color_from_hex
#:import colors kivymd.color_definitions.colors
#:import Clipboard kivy.core.clipboard.Clipboard


# Специальная метка
<SpecialLabel@MDLabel>:
    font_size: 25
    halign: 'center'


# Кастомный Snackbar
<CustomSnackbar>:
    MDIcon:
        # Позиционирование
        pos_hint: {'center_y': 0.5}
        
        # Размеры
        size_hint_x: 0.06
        
        # Оформление
        icon: root.icon
        text_color: 1, 1, 1, 1
        theme_text_color: "Custom"

    MDLabel:
        text: root.text
        markup: True
        font_size: root.font_size
        shorten: True
        shorten_from: 'right'
        theme_text_color: "Custom"
        pos_hint: {'center_x': 0.3, 'center_y': 0.5}


<MDFillRoundFlatButton>:
    theme_text_color: root.theme_text_color   
    text_color: root.text_color   

# Специальное текстовое поле
<SpecialTextField@MDTextField>:
    multiline: False
    size_hint_x: 0.5
    mode: "rectangle"
    required: True
    helper_text_mode: "on_error"
    helper_text: "Обязательное поле"

<TaskCard>:
    size_hint_y: None
    height: content.height

    MDCardSwipeLayerBox:
        padding: "8dp"

        MDIconButton:
            icon: "trash-can"
            pos_hint: {"center_y": .5}
            on_release: root.remove_card(root)

    MDCardSwipeFrontBox:

        ThreeLineListItem:
            id: content

            # Текст
            text: root.text
            secondary_text: root.secondary_text
            tertiary_text: root.tertiary_text
            
            # Размеры
            size_hint_x: 0.75

            on_release: root.open_task(root)

        RightCheckbox:
            size_hint_x: 0.2
            pos_hint_x: 0.8

            active: root.active
            on_active: root.on_checkbox_active(*args, root)


<UserCard>:
    checkbox: checkbox
    size_hint_y: None
    height: content.height

    MDCardSwipeLayerBox:
        padding: "8dp"

        MDIconButton:
            icon: "face"
            pos_hint: {"center_y": .5}

    MDCardSwipeFrontBox:

        TwoLineListItem:
            id: content

            # Текст
            text: root.text
            secondary_text: root.secondary_text

            # Размеры
            size_hint_x: 0.75

        RightCheckbox:
            id: checkbox
            size_hint_x: 0.2
            pos_hint_x: 0.8
            active: root.active

            on_active: root.on_checkbox_active(*args, root)


<SwipeToDeleteItem>:
    size_hint_y: None
    height: content.height

    MDCardSwipeLayerBox:
        padding: "8dp"

        MDIconButton:
            icon: "trash-can"
            pos_hint: {"center_y": .5}
            on_release: root.remove_card(root)

    MDCardSwipeFrontBox:

        TwoLineListItem:
            id: content
            text: root.text
            secondary_text: root.secondary_text
            on_release: root.change_screen(root)


# Начальный экран
<StartScreen>:
    MDFloatLayout:
        md_bg_color: 0.93, 0.93, 0.93, 1

        MDFillRoundFlatButton:
            # Текст
            text: "[color=#ffffff][b]РЕГИСТРАЦИЯ\nКОМАНДЫ[/b][/color]"
            # (markup - метки в строке, похоже на html теги)
            font_size: 22
            markup: True

            # Позиционирование
            pos_hint: {'center_x': 0.5, 'center_y': 0.6}

            # Размеры
            size_hint: 0.5, 0.15

            on_release:
                root.define_screens()
                root.manager.transition.direction = 'down'
                root.manager.transition.duration = 0.5
                root.manager.current = 'sign_in_screen'

        MDFillRoundFlatButton:
            # Текст
            text: "[color=#ffffff][b]ВХОД[/b][/color]"
            font_size: 22
            markup: True

            # Позиционирование
            pos_hint: {'center_x': 0.5, 'center_y': 0.4}

            # Размеры
            size_hint: 0.5, 0.15

            on_release:
                root.define_screens()
                root.manager.transition.direction = 'up'
                root.manager.transition.duration = 0.5
                root.manager.current = 'log_in_screen'

        MDTextButton:
            # Текст
            text: "ВЫЙТИ"

            # Позиционирование
            pos_hint: {'center_x': 0.5, 'center_y': 0.28}

            # Размеры
            font_size: 17

            on_release:
                app.exit_app()


# Поле ввода для Dialog
<EditTeamName>:

    # Текстовое поле ввода названия команды
    team_name: team_name

    # Позиционирование
    orientation: 'vertical'

    # Размеры
    spacing: "12dp"
    height: "50dp"
    size_hint_y: None

    MDTextField:
        id: team_name
        hint_text: "Название"
        multiline: False
        font_size: '20sp'


# Экран регистрации
<SignInScreen>:

    # Toolbar, чтобы можно было использовать self.ids.toolbar.title
    toolbar: toolbar

    MDFloatLayout:
        md_bg_color: 0.93, 0.93, 0.93, 1

        BoxLayout:
            ScrollView:
                size_hint: 1, 1
  
                MDList:
                    id: container
                    padding: 10, 75, 10, 120
                    spacing: 10

        MDToolbar:
            id: toolbar

            # Текст
            title: "[color=#ffffff]<Введите название команды>[/color]"
            markup: True
            specific_text_color: 1, 1, 1, 1

            # Позиционирование
            anchor_title: 'center'
            pos_hint: {'top': 1.0}

            left_action_items: [["arrow-left", lambda x: root.back_to_start(), "Вернуться на стартовую"]]
            right_action_items: [["pencil", lambda x: root.edit_team_name(), "Изменить название команды"]]

        MDIconButton:
            # Текст
            icon: "plus"
            user_font_size: "50sp"

            # Позиционирование
            pos_hint: {'x': 0.8, 'y': 0.03}
            
            # Оформление
            text_color: 1,1,1,1
            md_bg_color: get_color_from_hex(colors["Teal"]["A700"])
            theme_text_color: "Custom"

            on_release:
                root.clear_fields()
                root.create_user_box()
                root.manager.transition.direction = 'left'
                root.manager.transition.duration = 0.5
                root.manager.current = 'registration_screen'

        MDFillRoundFlatButton:
            # Текст
            text: "[color=#ffffff][b]ЗАРЕГИСТРИРОВАТЬ[/b][/color]"
            font_size: 22
            markup: True

            # Позиционирование
            pos_hint: {'center_x': 0.35, 'center_y': 0.075}
            
            # Размеры
            size_hint: 0.55, 0.1

            on_release:
                root.sign_in()



# Экран регистрации
<RegistrationScreen>:
    name:name
    role:role
    button:button
    label:label
    warning_label:warning_label
    MDFloatLayout:
        md_bg_color: 0.93, 0.93, 0.93, 1

        MDIconButton:
            icon: "arrow-left"
            pos_hint: {'x': 0.05, 'y': 0.9}
            user_font_size: "30sp"
